#tag Events VersionUpgradeCanvas
	#tag Event
		Sub Paint(g As Graphics, areas() As REALbasic.Rect)
		  g.PenHeight=1
		  g.PenWidth=1
		  g.ForeColor = &cFFFFFF
		  g.FillRect(0,0,me.Width,me.Height)
		  
		  g.Transparency = 70
		  g.ForeColor = &c000000
		  g.DrawRect(-2,-1,me.Width+4,me.Height)
		  g.Transparency = 0
		  g.DrawPicture(Logosmall,Me.Width/2 - Logosmall.Width/2,8)
		  g.TextSize = 11
		  g.Bold = True
		  g.DrawString("v"+app.VersionRelease,Me.Width - 76,128)
		  g.Bold = False
		  g.TextFont = "Helvetica"
		  g.TextSize = 14
		  g.DrawString(Strings_Module.kManualUpgradeWindow_NeedUpgrade,24,156)
		  g.TextSize = 12
		  g.DrawString(Strings_Module.kManualUpgradeWindow_NeedUpgradeMsg,28,186)
		  g.ForeColor = &c1B1BB3
		  g.Underline = True
		  g.DrawString(Strings_Module.kManualUpgradeWindow_NeedUpgradeDownloadMSG +VersionCheck.CurrentAvailableVersion,136,216)
		  g.Underline = False
		  
		End Sub
	#tag EndEvent
	#tag Event
		Sub MouseUp(X As Integer, Y As Integer)
		  Dim HTTPCMD as New Shell
		  
		  if X >= 126 AND X <=287 AND Y>=190 AND Y<=218 Then
		    
		    #IF TargetMacOS Then
		      HTTPCMD.Execute("open "+VersionCheck.CurrentAvailableUserDownloadLink)
		      
		    #ELSEIF TargetWin32  Then
		      
		      HTTPCMD.Execute("""C:\Program Files\Internet Explorer\iexplore.exe""" + " " + VersionCheck.CurrentAvailableUserDownloadLink)// VersionCheck.CurrentAvailableDownloadLink)
		      
		    #ENDIF
		  End if
		End Sub
	#tag EndEvent
	#tag Event
		Function MouseDown(X As Integer, Y As Integer) As Boolean
		  Return True
		End Function
	#tag EndEvent
	#tag Event
		Sub MouseMove(X As Integer, Y As Integer)
		  #IF TargetMacOS OR TargetLinux Then
		    if X >= 126 AND X <=287 AND Y>=190 AND Y<=218 Then
		      Me.MouseCursor = System.Cursors.FingerPointer
		    Else
		      me.MouseCursor = System.Cursors.StandardPointer
		    End if
		  #ENDIF
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events BottomBar
	#tag Event
		Sub Paint(g As Graphics, areas() As REALbasic.Rect)
		  // Awesome Gradient Fill
		  dim i as integer, ratio, endratio as Double
		  dim StartColor, EndColor as Color
		  g.Transparency = App.BottomBarTransparencyValue
		  
		  StartColor = RGB(235, 239, 242)
		  EndColor = App. ThemeColor_BottomBar
		  
		  // Draw The Gradient
		  for i = g.Height DownTo 0
		    // Need our ratios of start / end
		    ratio = (i/g.Height)
		    endratio = ((g.Height-i)/g.Height)
		    // Determine the Color
		    g.ForeColor = RGB(StartColor.Red * endratio + EndColor.Red * ratio, StartColor.Green * endratio + EndColor.Green * ratio, StartColor.Blue * endratio + EndColor.Blue * ratio)
		    // Draw the current line
		    g.DrawLine 0, i, g.Width, i
		  next
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events GoAwayButton
	#tag Event
		Sub Action()
		  ManualNeedVersionUpgradeNotificationWindow.Close
		End Sub
	#tag EndEvent
