#tag Events AboutWin_Canvas
	#tag Event
		Sub Paint(g As Graphics, areas() As REALbasic.Rect)
		  g.PenHeight=1
		  g.PenWidth=1
		  g.ForeColor = &cFFFFFF
		  g.FillRect(0,0,me.Width,me.Height)
		  
		  g.Transparency = 70
		  g.ForeColor = &c000000
		  g.DrawRect(-2,-1,me.Width+4,me.Height)
		  g.Transparency = 0
		  
		  g.DrawPicture(Logosmall,(Self.Width-Logosmall.Width)/2,12)
		  
		  
		  // Spacing of Words are in 16 pixels
		  g.TextFont = "Helvetica"
		  g.TextSize = 12
		  g.DrawString(Strings_Module.kAbout_About_ProdName,20,164)
		  g.DrawString(Strings_Module.kAbout_About_Version + App.VersionRelease,20,180)
		  g.DrawString(Strings_Module.kAbout_About_CopyRight + Encodings.UTF8.Chr(169) + " 2014 Intelligent Visibility, Inc.",20,196)
		  g.DrawString(Strings_Module.kAbout_About_TM,20,212)
		  g.DrawString(Strings_Module.kAbout_About_ProdName+Encodings.UTF8.Chr(174)+Strings_Module.kAbout_About_TMofIV,20,244)
		  g.DrawString(Strings_Module.kAbout_About_EmailQ,20,276)
		  
		  #IF TargetMacOS or TargetLinux Then
		    g.ForeColor = &c1B1BB3
		    g.Underline = True
		    g.DrawString("support@intelligentvisibility.com",220,276)
		    g.Underline = False
		  #ELSEIF TargetWin32 Then
		    g.DrawString("support@intelligentvisibility.com",220,276)
		  #ENDIF
		  
		  g.ForeColor = &c000000
		  g.DrawString(Strings_Module.kAbout_About_Use1 +  Encodings.UTF8.Chr(174) + Strings_Module.kAbout_About_Use2 + EndOfLine+_
		  Strings_Module.kAbout_About_Use3,20,308)
		  
		  
		End Sub
	#tag EndEvent
	#tag Event
		Sub MouseUp(X As Integer, Y As Integer)
		  Dim EmailCMD as New Shell
		  
		  if X >= 216 AND X <=392 AND Y>=268 AND Y<=278 Then
		    #IF TargetMacOS Then
		      EmailCMD.Execute("open ""mailto:support@intelligentvisibility.com?subject=Intelligent Subnet Calculator Question&body=""")
		    #ENDIF
		  End if
		End Sub
	#tag EndEvent
	#tag Event
		Function MouseDown(X As Integer, Y As Integer) As Boolean
		  Return True
		End Function
	#tag EndEvent
	#tag Event
		Sub MouseMove(X As Integer, Y As Integer)
		  #IF TargetMacOS OR TargetLinux Then
		    if X >= 216 AND X <=392 AND Y>=268 AND Y<=278 Then
		      Me.MouseCursor = System.Cursors.FingerPointer
		    Else
		      me.MouseCursor = System.Cursors.StandardPointer
		    End if
		  #ENDIF
		End Sub
	#tag EndEvent
#tag EndEvents
