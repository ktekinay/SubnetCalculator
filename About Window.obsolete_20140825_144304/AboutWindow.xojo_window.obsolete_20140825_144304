#tag WindowCode
	#tag Event
		Sub Open()
		  Dim About As SegmentedControlItem
		  Dim EULA as SegmentedControlItem
		  Dim Credits as SegmentedControlItem
		  
		  About = AboutSegmentedControl.Items(0)
		  Credits = AboutSegmentedControl.Items(1)
		  EULA = AboutSegmentedControl.Items(2)
		  
		  If About.Selected Then
		    AboutWindow.About_About_ContainerControl1.Show
		    AboutWindow.About_EULA_ContainerControl1.Hide
		    AboutWindow.About_Credits_ContainerControl1.Hide
		    AboutWindow.Title =  "About Intelligent Subnet Calculator"
		  Elseif EULA.Selected Then
		    AboutWindow.About_EULA_ContainerControl1.Show
		    AboutWindow.About_About_ContainerControl1.Hide
		    AboutWindow.About_Credits_ContainerControl1.Hide
		    AboutWindow.Title = "End User License Agreement (EULA)"
		  Elseif Credits.Selected Then
		    AboutWindow.About_Credits_ContainerControl1.Show
		    AboutWindow.About_About_ContainerControl1.Hide
		    AboutWindow.About_EULA_ContainerControl1.Hide
		    AboutWindow.Title = "Credits"
		  End If
		End Sub
	#tag EndEvent


#tag EndWindowCode

#tag Events BottomBar
	#tag Event
		Sub Paint(g As Graphics, areas() As REALbasic.Rect)
		  // Awesome Gradient Fill
		  dim i as integer, ratio, endratio as Double
		  dim StartColor, EndColor as Color
		  g.Transparency = App.BottomBarTransparencyValue
		  
		  StartColor = RGB(235, 239, 242)
		  EndColor = App. ThemeColor_BottomBar//71B971
		  
		  // Draw The Gradient
		  for i = g.Height DownTo 0
		    // Need our ratios of start / end
		    ratio = (i/g.Height)
		    endratio = ((g.Height-i)/g.Height)
		    // Determine the Color
		    g.ForeColor = RGB(StartColor.Red * endratio + EndColor.Red * ratio, StartColor.Green * endratio + EndColor.Green * ratio, StartColor.Blue * endratio + EndColor.Blue * ratio)
		    // Draw the current line
		    g.DrawLine 0, i, g.Width, i
		  next
		End Sub
	#tag EndEvent
	#tag Event
		Sub Open()
		  Me.Invalidate(False)
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events AboutSegmentedControl
	#tag Event
		Sub Action(itemIndex as integer)
		  Dim About As SegmentedControlItem
		  Dim EULA as SegmentedControlItem
		  Dim Credits as SegmentedControlItem
		  
		  About = Me.Items(0)
		  Credits = Me.Items(1)
		  EULA = Me.Items(2)
		  
		  If About.Selected Then
		    AboutWindow.About_About_ContainerControl1.Show
		    AboutWindow.About_EULA_ContainerControl1.Hide
		    AboutWindow.About_Credits_ContainerControl1.Hide
		    AboutWindow.Title =  Strings_Module.kAbout_SegmentControl_About
		  Elseif EULA.Selected Then
		    AboutWindow.About_EULA_ContainerControl1.Show
		    AboutWindow.About_About_ContainerControl1.Hide
		    AboutWindow.About_Credits_ContainerControl1.Hide
		    AboutWindow.Title = Strings_Module.kAbout_SegmentControl_Eula
		  Elseif Credits.Selected Then
		    AboutWindow.About_Credits_ContainerControl1.Show
		    AboutWindow.About_About_ContainerControl1.Hide
		    AboutWindow.About_EULA_ContainerControl1.Hide
		    AboutWindow.Title = Strings_Module.kAbout_SegmentControl_Credits
		  End If
		End Sub
	#tag EndEvent
#tag EndEvents
