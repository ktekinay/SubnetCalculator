#tag Class
Protected Class HTTP_GetUpgradeFile
Inherits HTTPSocket
	#tag Event
		Sub Error(code as integer)
		  if code <> 0 Then
		    AutoIntall_DownloadStatus = False
		  elseif code = 0 then
		    AutoIntall_DownloadStatus = true
		  end if
		End Sub
	#tag EndEvent

	#tag Event
		Sub HeadersReceived(headers as internetHeaders, httpStatus as integer)
		  // Get Header Received Content Length Total Byte Size
		  AutoInstallProgressBarTotalBytes = CDbl(headers.Value(5))
		  
		End Sub
	#tag EndEvent

	#tag Event
		Sub ReceiveProgress(bytesReceived as integer, totalBytes as integer, newData as string)
		  AutoInstallProgressBarBytesReceived = bytesReceived
		  
		  Dim AutoInstallStatus_TmpCalc as Double = AutoInstallProgressBarBytesReceived / AutoInstallProgressBarTotalBytes
		  
		  AutoInstallProgressBarStatusPercentage =  AutoInstallStatus_TmpCalc*100
		  
		  if AutoInstallProgressBarStatusPercentage = 100 then
		    AutoIntall_DownloadStatus = true
		    
		    if VersionCheck.AutoIntall_DownloadStatus = False Then
		      MsgBox "Auto installation was not successful." + EndOfLine + EndOfLine + "This will automatically retry the next time your open Intelligent Subnet Calculator."
		      // Hide Progress Status Bubble on Main Window
		      MainWindow.App_Notification_AutoInstallInProgress.Visible = False
		    Elseif VersionCheck.AutoIntall_DownloadStatus = True Then
		      // Alert the User that we have successfully upgraded and requires a restart
		      MainWindow.App_Notification_AutoInstallInProgress.Visible = False
		      Dim PlayPopSounds as New Sound
		      //PlayPopSounds = Pop
		      PlayPopSounds.Play
		      // Update Labels Main Window BubblePopUp since we are done
		      MainWindow.App_Notification_AutoInstallComplete.Visible = True
		    End if
		  end if
		  
		  
		End Sub
	#tag EndEvent


	#tag ViewBehavior
		#tag ViewProperty
			Name="Address"
			Visible=true
			Group="Behavior"
			Type="String"
			EditorType="MultiLineEditor"
		#tag EndViewProperty
		#tag ViewProperty
			Name="BytesAvailable"
			Group="Behavior"
			Type="Integer"
		#tag EndViewProperty
		#tag ViewProperty
			Name="BytesLeftToSend"
			Group="Behavior"
			Type="Integer"
		#tag EndViewProperty
		#tag ViewProperty
			Name="Handle"
			Group="Behavior"
			InitialValue="0"
			Type="Integer"
		#tag EndViewProperty
		#tag ViewProperty
			Name="httpProxyAddress"
			Group="Behavior"
			Type="string"
			EditorType="MultiLineEditor"
		#tag EndViewProperty
		#tag ViewProperty
			Name="httpProxyPort"
			Group="Behavior"
			InitialValue="0"
			Type="integer"
		#tag EndViewProperty
		#tag ViewProperty
			Name="Index"
			Visible=true
			Group="ID"
			Type="Integer"
		#tag EndViewProperty
		#tag ViewProperty
			Name="IsConnected"
			Group="Behavior"
			InitialValue="0"
			Type="Boolean"
		#tag EndViewProperty
		#tag ViewProperty
			Name="LastErrorCode"
			Group="Behavior"
			InitialValue="0"
			Type="Integer"
		#tag EndViewProperty
		#tag ViewProperty
			Name="Left"
			Visible=true
			Group="Position"
			Type="Integer"
		#tag EndViewProperty
		#tag ViewProperty
			Name="LocalAddress"
			Group="Behavior"
			Type="String"
			EditorType="MultiLineEditor"
		#tag EndViewProperty
		#tag ViewProperty
			Name="Name"
			Visible=true
			Group="ID"
			Type="String"
		#tag EndViewProperty
		#tag ViewProperty
			Name="Port"
			Visible=true
			Group="Behavior"
			InitialValue="0"
			Type="Integer"
		#tag EndViewProperty
		#tag ViewProperty
			Name="RemoteAddress"
			Group="Behavior"
			Type="String"
		#tag EndViewProperty
		#tag ViewProperty
			Name="Super"
			Visible=true
			Group="ID"
			Type="String"
		#tag EndViewProperty
		#tag ViewProperty
			Name="Top"
			Visible=true
			Group="Position"
			Type="Integer"
		#tag EndViewProperty
		#tag ViewProperty
			Name="yield"
			Group="Behavior"
			InitialValue="0"
			Type="boolean"
		#tag EndViewProperty
	#tag EndViewBehavior
End Class
#tag EndClass
