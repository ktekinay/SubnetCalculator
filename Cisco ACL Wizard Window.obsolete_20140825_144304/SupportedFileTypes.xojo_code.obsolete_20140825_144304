#tag Class
Protected Class SupportedFileTypes
	#tag Method, Flags = &h0
		Function fBuildSupportedFileTypes() As String
		  // Build Supported List of File Types and Return one easy String
		  Dim SupportedFileTypes as String =_
		  FileType_TXT+FileType_CSV+FileType_HTML+_
		  FileType_HTM+FileType_XLS+FileType_XLSX+FileType_JPG+FileType_PNG+_
		  FileType_Docx+FileType_RTF+FileType_PDF+FileType_ZIP+FileType_RAR+FileType_Xojo+_
		  FileType_OtherGraphics
		  
		  Return SupportedFileTypes
		End Function
	#tag EndMethod

	#tag Method, Flags = &h0
		Sub mBuildAcceptedFileTypes()
		  FileType_TXT = New FileType
		  FileType_TXT.Name = "TXT Files"
		  FileType_TXT.MacType = "TEXT"
		  FileType_TXT.Extensions = "txt;"  // <-- We assume that files with NO extensions are text or rtf files
		  
		  FileType_CSV = New FileType
		  FileType_CSV.Name = "CSV Files"
		  FileType_CSV.MacType = "TEXT"
		  FileType_CSV.Extensions = "csv"
		  
		  FileType_HTM = New FileType
		  FileType_HTM.Name = "HTM Files"
		  FileType_HTM.MacType = "HTM"
		  FileType_HTM.Extensions = "htm"
		  
		  FileType_HTML = New FileType
		  FileType_HTML.Name = "HTML Files"
		  FileType_HTML.MacType = "HTML"
		  FileType_HTML.Extensions = "html"
		  
		  FileType_XLS = New FileType
		  FileType_XLS.Name = "Excel (97-2004) Files"
		  FileType_XLS.MacType = "XLS"
		  FileType_XLS.Extensions = "xls"
		  
		  FileType_XLSX = New FileType
		  FileType_XLSX.Name = "Excel Files"
		  FileType_XLSX.MacType = "XLSX"
		  FileType_XLSX.Extensions = "xlsx"
		  
		  FileType_Doc = New FileType
		  FileType_Doc.Name = "Word (98-2004) documents"
		  FileType_Doc.MacType = "DOC"
		  FileType_Doc.MacCreator = "mswd"
		  FileType_Doc.Extensions = "doc"
		  
		  FileType_Docx = New FileType
		  FileType_Docx.Name = "Word documents"
		  FileType_Docx.MacType = "WXBN"
		  FileType_Docx.MacCreator = "mswd"
		  FileType_Docx.Extensions = "docx"
		  
		  FileType_RTF = New FileType
		  FileType_RTF.Name = "Rich Text Format documents"
		  FileType_RTF.MacType = "RTF"
		  FileType_RTF.MacCreator = "mswd"
		  FileType_RTF.Extensions = "rtf"
		  
		  FileType_PDF = New FileType
		  FileType_PDF.Name = "PDF files"
		  FileType_PDF.MacType = "PDF"
		  FileType_PDF.Extensions = "pdf"
		  
		  FileType_ZIP = New FileType
		  FileType_ZIP.Name = "ZIP files"
		  FileType_ZIP.MacType = "ZIP"
		  FileType_ZIP.Extensions = "zip"
		  
		  FileType_RAR = New FileType
		  FileType_RAR.Name = "RAR files"
		  FileType_RAR.MacType = "RAR"
		  FileType_RAR.Extensions = "rar"
		  
		  // Images
		  FileType_JPG = New FileType
		  FileType_JPG.Name = "JPEG Images"
		  FileType_JPG.MacType = "JPEG"
		  FileType_JPG.MacCreator = "prvw"
		  FileType_JPG.Extensions = "jpg;jpeg"
		  
		  FileType_PNG = New FileType
		  FileType_PNG.Name = "PNG Images"
		  FileType_PNG.MacType = "PNG"
		  FileType_PNG.MacCreator = "ogle"
		  FileType_PNG.Extensions = "png"
		  
		  FileType_OtherGraphics = New FileType
		  FileType_OtherGraphics.Name = "Graphics Files"
		  FileType_OtherGraphics.Extensions = "eps;bmp"
		  
		  FileType_Xojo = New FileType
		  FileType_Xojo.Name = "Xojo Files"
		  FileType_Xojo.Extensions = "xojo_binary_project"
		End Sub
	#tag EndMethod


	#tag Property, Flags = &h21
		Private FileType_CSV As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_Doc As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_Docx As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_GIF As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_HTM As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_HTML As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_JPG As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_OtherGraphics As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_PDF As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_PNG As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_RAR As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_RTF As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_TXT As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_XLS As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_XLSX As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_Xojo As FileType
	#tag EndProperty

	#tag Property, Flags = &h21
		Private FileType_ZIP As FileType
	#tag EndProperty


	#tag ViewBehavior
		#tag ViewProperty
			Name="Index"
			Visible=true
			Group="ID"
			InitialValue="-2147483648"
			Type="Integer"
		#tag EndViewProperty
		#tag ViewProperty
			Name="Left"
			Visible=true
			Group="Position"
			InitialValue="0"
			Type="Integer"
		#tag EndViewProperty
		#tag ViewProperty
			Name="Name"
			Visible=true
			Group="ID"
			Type="String"
		#tag EndViewProperty
		#tag ViewProperty
			Name="Super"
			Visible=true
			Group="ID"
			Type="String"
		#tag EndViewProperty
		#tag ViewProperty
			Name="Top"
			Visible=true
			Group="Position"
			InitialValue="0"
			Type="Integer"
		#tag EndViewProperty
	#tag EndViewBehavior
End Class
#tag EndClass
