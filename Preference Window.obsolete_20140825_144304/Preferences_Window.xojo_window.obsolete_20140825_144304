#tag WindowCode
	#tag Event
		Sub Close()
		  // Save Preferences File
		  App.Preferences.mWriteGeneral_Preferences("ThemeLayout",General_Settings_Container1.Layout_PopUpMenu.Text)
		  App.Preferences.mWriteGeneral_Preferences("AppearanceStyle",General_Settings_Container1.AppearanceStyle_PopupMenu.Text)
		  App.Preferences.mWriteGeneral_Preferences("CalculatorWindowTransparency",General_Settings_Container1.WindowTransparency_PopUpmenu.Text)
		  App.Preferences.mWriteGeneral_Preferences("CheckForVersionUpdateFreq",SoftwareSettings_Container1.UpdateSoftwareFreq_PopupMenu.Text)
		  App.Preferences.mWriteGeneral_Preferences("UpgradeInstallationMethod",SoftwareSettings_Container1.AutoInstall_PopupMenu.Text)
		  Preferences_Window.Close
		End Sub
	#tag EndEvent

	#tag Event
		Sub Open()
		  General_Settings_Container1.Visible = True
		  // Decide to hide/show controls for Specific Platform
		  #IF TargetMacOS Then
		    General_Settings_Container1.BehaviorTitleLabel1.Visible = True
		    General_Settings_Container1.Transparency_Label.Visible = True
		    General_Settings_Container1.WindowTransparency_PopUpmenu.Visible = True
		  #ENDIF
		  
		End Sub
	#tag EndEvent


#tag EndWindowCode

#tag Events BottomBar
	#tag Event
		Sub Paint(g As Graphics, areas() As REALbasic.Rect)
		  // Awesome Gradient Fill
		  dim i as integer, ratio, endratio as Double
		  dim StartColor, EndColor as Color
		  g.Transparency = App.BottomBarTransparencyValue
		  
		  // Gradient
		  StartColor = RGB(235, 239, 242)
		  EndColor = App. ThemeColor_BottomBar //&c86F8E1&cFBB5DE//
		  
		  // Draw The Gradient
		  for i = g.Height DownTo 0
		    // Need our ratios of start / end
		    ratio = (i/g.Height)
		    endratio = ((g.Height-i)/g.Height)
		    // Determine the Color
		    g.ForeColor = RGB(StartColor.Red * endratio + EndColor.Red * ratio, StartColor.Green * endratio + EndColor.Green * ratio, StartColor.Blue * endratio + EndColor.Blue * ratio)
		    // Draw the current line
		    g.DrawLine 0, i, g.Width, i
		  next
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events PreferenceWIndow_Toolbar1
	#tag Event
		Sub Action(item As ToolItem)
		  If item.Caption =  " General " Then
		    ToolButton(me.item(0)).Pushed = True
		    ToolButton(me.Item(1)).Pushed = False
		    General_Settings_Container1.Visible = True
		    SoftwareSettings_Container1.Visible = False
		  Elseif item.Caption = " Updates " Then
		    ToolButton(me.Item(1)).Pushed = True
		    ToolButton(me.item(0)).Pushed = False
		    General_Settings_Container1.Visible = False
		    SoftwareSettings_Container1.Visible = True
		    SoftwareSettings_Container1.CurrentRunningVer_DataLabel.Text = VersionCheck.CurrentRunningVersion
		    SoftwareSettings_Container1.CurrentAvailVersion_Datalabel.Text = VersionCheck.CurrentAvailableVersion
		    SoftwareSettings_Container1.DateVersionLastChecked_Datalabel.Text = App.Preferences.DateLastCheckedForVerUpgradeString
		  End If
		End Sub
	#tag EndEvent
	#tag Event
		Sub Open()
		  Dim General_ToolButton As New ToolButton
		  General_ToolButton.Style = ToolButton.ToolStyleToggleButton
		  General_ToolButton.Caption = " General "
		  General_ToolButton.Icon = interface_preferences
		  me.Append(General_ToolButton)
		  
		  #IF TargetWin32 or DebugBuild Then
		    Dim SoftwareSettings_ToolButton As New ToolButton
		    SoftwareSettings_ToolButton.Style = ToolButton.ToolStyleToggleButton
		    SoftwareSettings_ToolButton.Caption = " Updates "
		    SoftwareSettings_ToolButton.Icon = Reset
		    me.Append(SoftwareSettings_ToolButton)
		  #ENDIF
		  
		  // Set Default Pressed Toolbar Button
		  General_ToolButton.Pushed = Not General_ToolButton.Pushed
		End Sub
	#tag EndEvent
#tag EndEvents
